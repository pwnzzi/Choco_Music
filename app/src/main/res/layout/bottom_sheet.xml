<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1e1e1e"
    android:id="@+id/bottom_sheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout
        android:background="#171717"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/home_fragment_play_btn"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:srcCompat="@drawable/play_btn"
            Android:ignore="VectorDrawableCompat"
            android:tint="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="@drawable/round"
                />



            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#fe9500"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해시태그" />

            <Button
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="@drawable/round"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_tag_1"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#감미로운"/>

            <Button
                android:id="@+id/btn_tag_2"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#은유적인"/>

            <Button
                android:id="@+id/btn_tag_3"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#어쿠스틱"/>



        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_tag_4"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#잔잔한"/>

            <Button
                android:id="@+id/btn_tag_5"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#가을"/>

            <Button
                android:id="@+id/btn_tag_6"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#조용한"/>


            <Button
                android:id="@+id/btn_tag_7"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#느린"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_tag_8"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#담백한"/>

            <Button
                android:id="@+id/btn_tag_9"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#감성적인"/>

            <Button
                android:id="@+id/btn_tag_10"
                android:background="@drawable/button_border"
                android:textSize="15dp"
                style="@style/TextStyle02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="#미디엄템포"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="@drawable/round"
                />

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#fe9500"
            android:textSize="15dp"
            style="@style/TextStyle02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평점" />

            <Button
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="@drawable/round"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star_1"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star_selected"/>

            <ImageView
                android:id="@+id/star_2"
                android:layout_marginLeft="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star_selected"/>

            <ImageView
                android:id="@+id/star_3"
                android:layout_marginLeft="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star_selected"/>

            <ImageView
                android:id="@+id/star_4"
                android:layout_marginLeft="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star_selected"/>

            <ImageView
                android:id="@+id/star_5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star_selected"/>

        </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <Button
            android:id="@+id/sheet_cancel"
            style="@style/TextStyle02"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_border"
            android:foreground="?attr/selectableItemBackground"
            android:text="취소"
            android:textSize="20dp"
            android:layout_marginRight="20dp"

            android:textColor="#ffffff" />

        <Button
            android:id="@+id/sheet_confirm"
            style="@style/TextStyle02"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_border"
            android:foreground="?attr/selectableItemBackground"
            android:text="완료"
            android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>