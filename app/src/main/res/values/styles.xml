<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="TextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">9.7sp</item>
        <item name="android:textColor">#f56e47</item>
    </style>

    <style name="TextStyle02">

        <item name="android:textSize">5.3sp</item>
        <item name="android:lineSpacingExtra">-0.3sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="TextStyle2">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">5.3sp</item>
        <item name="android:lineSpacingExtra">-0.3sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextStyle4">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">-0.3sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextStyle3">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">0.3sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextStyle6">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">5.3sp</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">#adff00</item>
    </style>


    <style name="TextStyle5">
        <item name="android:textSize">6sp</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextStyle7">
        <item name="android:textSize">5.3sp</item>
        <item name="android:lineSpacingExtra">-0.3sp</item>
        <item name="android:textColor">#fe9500</item>
    </style>

    <style name="Base.Widget.Design.TabLayout." parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">#ff00ff</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingstar</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>



</resources>
